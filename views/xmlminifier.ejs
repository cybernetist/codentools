                </div>
            </div>
        </div>
    </div>

    
    
<script type="text/javascript" src="/assets/js/vkbeautify.js"></script>

    
<script>

$( "#minifier" ).click(function() {
var xmlmin = $("#xml").val(); 
var minifiedXML = vkbeautify.xmlmin(xmlmin);
$("#minifiedXML").val(minifiedXML);     

});
    
    
function copyBe() {

  var copyText = document.getElementById("minifiedXML");


  copyText.select();
  copyText.setSelectionRange(0, 99999); 


  navigator.clipboard.writeText(copyText.value);


  alert("Copied");
}
   
</script>    
